{
    "compilerOptions": {
        "outDir": "./built",
            "allowJs": true,
                "target": "es5",
                    "noImplicitReturns": true,
                        "noImplicitAny": true,
                            "noEmitOnError": true,
        "module": "commonjs",
        "removeComments": true,
        "allowUnreachableCode": true,
            "inlineSourceMap": true,
                                    "moduleResolution": "node"
    },

    "include": ["./**/*"]
}